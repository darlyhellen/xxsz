<resources>

    <style name="AppBaseTheme" parent="android:Theme.Light"></style>

    <style name="AppTheme" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="more_about_text" parent="android:Widget.TextView">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="full_ver_line_seperatorbyfublish">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:background">@color/full_line_tabbottom</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="full_line_seperator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/full_line</item>
    </style>

    <style name="full_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/color_d5d5d5</item>
    </style>

    <style name="full_line_f1d09e">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/color_f1d09e</item>
    </style>

    <style name="full_line_seperator_home">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/color_d5d5d5</item>
    </style>

    <style name="full_ver_line_seperator">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/full_line</item>
    </style>

    <style name="full_ver_line_seperator_home">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/full_line</item>
        <item name="android:layout_marginTop">18dp</item>
        <item name="android:layout_marginBottom">18dp</item>
    </style>

    <style name="full_ver_line_fublish">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">15dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <!-- msgdialog -->
    <style name="msg_dalog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
    </style>

    <style name="AnimationFade">
        <item name="android:windowEnterAnimation">@anim/popup_window_enter</item>
        <item name="android:windowExitAnimation">@anim/popup_window_exit</item>
    </style>

    <style name="Add_Picture_AnimationFade">
        <item name="android:windowEnterAnimation">@anim/publish_push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/publish_push_bottom_out</item>
    </style>

    <style name="PublishDialog" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">40dp</item>
        <item name="android:paddingBottom">40dp</item>
    </style>

    <style name="full_line_white">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="more_relativelayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">49dp</item>
        <item name="android:background">@drawable/more_item_selector</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:clickable">true</item>
    </style>
    <!-- more -->
    <style name="more_text" parent="android:Widget.TextView">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color333333</item>
        <item name="android:textSize">16sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>

    <style name="more_text2" parent="@style/more_text">
        <item name="android:textColor">#999</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="more_arrows" parent="android:Widget.TextView">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_width">6dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:layout_height">11dp</item>
        <item name="android:background">@drawable/arrows</item>
    </style>
    <!-- 弹出框 -->
    <style name="updateDialog" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="checkbox_select_style">
        <item name="android:gravity">center</item>
        <item name="android:button">@drawable/checkbox_select</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textColor">@color/color666666</item>
    </style>

    <style name="checkbox_select_only_style">
        <item name="android:gravity">center</item>
        <item name="android:button">@drawable/checkbox_select_only</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/color666666</item>
    </style>

</resources>