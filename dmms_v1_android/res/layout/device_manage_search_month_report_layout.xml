<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="@dimen/margin_padding5"
                android:text="设备名称:"
                android:textColor="@color/color333333"
                android:textSize="@dimen/textSize16" />

            <EditText
                android:id="@+id/et_device_name06"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_padding5"
                android:background="@drawable/edittext_selector"
                android:hint="请输入设备名称"
                android:inputType="text"
                android:paddingBottom="@dimen/margin_padding15"
                android:paddingTop="@dimen/margin_padding15"
                android:text=""
                android:textColorHint="#b4b4b4"
                android:textSize="@dimen/textSize14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/margin_padding5"
                android:text="使用单位:"
                android:textColor="@color/color333333"
                android:textSize="@dimen/textSize16" />

            <EditText
                android:id="@+id/et_device_user_org03"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_padding5"
                android:background="@drawable/edittext_selector"
                android:hint="请输入使用单位"
                android:inputType="text"
                android:paddingBottom="@dimen/margin_padding15"
                android:paddingTop="@dimen/margin_padding15"
                android:text=""
                android:textColorHint="#b4b4b4"
                android:textSize="@dimen/textSize14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="@dimen/margin_padding5"
                android:text="型号/牌照:"
                android:textColor="@color/color333333"
                android:textSize="@dimen/textSize16" />

            <EditText
                android:id="@+id/et_device_plate02"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_padding5"
                android:background="@drawable/edittext_selector"
                android:hint="请输入型号/牌照"
                android:inputType="text"
                android:paddingBottom="@dimen/margin_padding15"
                android:paddingTop="@dimen/margin_padding15"
                android:text=""
                android:textColorHint="#b4b4b4"
                android:textSize="@dimen/textSize14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="@dimen/margin_padding5"
                android:text="使用时间:"
                android:textColor="@color/color333333"
                android:textSize="@dimen/textSize16" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/start_apply_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/margin_padding5"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_selector"
                    android:focusable="false"
                    android:gravity="center_horizontal"
                    android:hint="开始时间"
                    android:inputType="datetime"
                    android:paddingBottom="@dimen/margin_padding15"
                    android:paddingTop="@dimen/margin_padding15"
                    android:text=""
                    android:textColorHint="#b4b4b4"
                    android:textSize="@dimen/textSize14" />

                <View
                    android:layout_width="10dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/black" />

                <EditText
                    android:id="@+id/end_apply_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_padding5"
                    android:layout_marginRight="@dimen/margin_padding5"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_selector"
                    android:focusable="false"
                    android:gravity="center_horizontal"
                    android:hint="结束时间"
                    android:inputType="datetime"
                    android:paddingBottom="@dimen/margin_padding15"
                    android:paddingTop="@dimen/margin_padding15"
                    android:text=""
                    android:textColorHint="#b4b4b4"
                    android:textSize="@dimen/textSize14" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>