<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.xiangxun.xacity.view.TitleView
        android:id="@id/comment_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="@dimen/margin_padding5"
            android:text="统计粒度:"
            android:textColor="@color/color333333"
            android:textSize="@dimen/textSize16" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <LinearLayout
                android:id="@+id/ll_occupy_querytype_click"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_selector"
                android:orientation="horizontal" >

                <View style="@style/full_ver_line_fublish" />

                <TextView
                    android:id="@+id/tv_occupy_querytype"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请选择统计粒度"
                    android:textColor="@color/color333333"
                    android:textColorHint="#b4b4b4"
                    android:textSize="@dimen/textSize14" />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="bottom|right"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/icon_pull" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_type01"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="@dimen/margin_padding5"
            android:text="路面种类:"
            android:textColor="@color/color333333"
            android:textSize="@dimen/textSize16" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <LinearLayout
                android:id="@+id/ll_occupy_area_click"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_selector"
                android:orientation="horizontal" >

                <View style="@style/full_ver_line_fublish" />

                <TextView
                    android:id="@+id/tv_occupy_area"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请选择路面种类"
                    android:textColor="@color/color333333"
                    android:textColorHint="#b4b4b4"
                    android:textSize="@dimen/textSize14" />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="bottom|right"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/icon_pull" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_type02"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="@dimen/margin_padding5"
            android:text="挖占类型:"
            android:textColor="@color/color333333"
            android:textSize="@dimen/textSize16" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <LinearLayout
                android:id="@+id/ll_occupy_faceType_click"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_selector"
                android:orientation="horizontal" >

                <View style="@style/full_ver_line_fublish" />

                <TextView
                    android:id="@+id/tv_occupy_faceType"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请选择挖占类型"
                    android:textColor="@color/color333333"
                    android:textColorHint="#b4b4b4"
                    android:textSize="@dimen/textSize14" />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="bottom|right"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/icon_pull" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="@dimen/margin_padding5"
            android:text="施工日期:"
            android:textColor="@color/color333333"
            android:textSize="@dimen/textSize16" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/start_occupy_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/margin_padding5"
                android:layout_weight="1"
                android:background="@drawable/edittext_selector"
                android:focusable="false"
                android:gravity="center_horizontal"
                android:hint="开始时间"
                android:inputType="datetime"
                android:paddingBottom="@dimen/margin_padding15"
                android:paddingTop="@dimen/margin_padding15"
                android:text=""
                android:textColorHint="#b4b4b4"
                android:textSize="@dimen/textSize14" />

            <View
                android:layout_width="10dp"
                android:layout_height="1dp"
                android:layout_gravity="center_vertical"
                android:background="@color/black" />

            <EditText
                android:id="@+id/end_occupy_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_padding5"
                android:layout_marginRight="@dimen/margin_padding5"
                android:layout_weight="1"
                android:background="@drawable/edittext_selector"
                android:focusable="false"
                android:gravity="center_horizontal"
                android:hint="结束时间"
                android:inputType="datetime"
                android:paddingBottom="@dimen/margin_padding15"
                android:paddingTop="@dimen/margin_padding15"
                android:text=""
                android:textColorHint="#b4b4b4"
                android:textSize="@dimen/textSize14" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_search"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/title_height"
        android:layout_gravity="right|center_vertical"
        android:layout_margin="@dimen/margin_padding10"
        android:background="@drawable/btn_selecter_register"
        android:text="@string/search_btn"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize18" />

</LinearLayout>