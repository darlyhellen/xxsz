<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="@dimen/margin_padding5"
                android:text="使用单位:"
                android:textColor="@color/color333333"
                android:textSize="@dimen/textSize16" />

            <EditText
                android:id="@+id/et_device_user_org02"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_padding5"
                android:background="@drawable/edittext_selector"
                android:hint="请输入使用单位"
                android:inputType="text"
                android:paddingBottom="@dimen/margin_padding15"
                android:paddingTop="@dimen/margin_padding15"
                android:text=""
                android:textColorHint="#b4b4b4"
                android:textSize="@dimen/textSize14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/margin_padding5"
                android:text="设备名称:"
                android:textColor="@color/color333333"
                android:textSize="@dimen/textSize16" />

            <EditText
                android:id="@+id/et_device_name05"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_padding5"
                android:background="@drawable/edittext_selector"
                android:hint="请输入设备名称"
                android:inputType="text"
                android:paddingBottom="@dimen/margin_padding15"
                android:paddingTop="@dimen/margin_padding15"
                android:text=""
                android:textColorHint="#b4b4b4"
                android:textSize="@dimen/textSize14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="@dimen/margin_padding5"
                android:text="规格型号:"
                android:textColor="@color/color333333"
                android:textSize="@dimen/textSize16" />

            <EditText
                android:id="@+id/et_device_type02"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_padding5"
                android:background="@drawable/edittext_selector"
                android:hint="请输入规格型号"
                android:inputType="text"
                android:paddingBottom="@dimen/margin_padding15"
                android:paddingTop="@dimen/margin_padding15"
                android:text=""
                android:textColorHint="#b4b4b4"
                android:textSize="@dimen/textSize14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="@dimen/margin_padding5"
                android:text="月份:"
                android:textColor="@color/color333333"
                android:textSize="@dimen/textSize16" />

            <EditText
                android:id="@+id/et_device_month"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_padding5"
                android:background="@drawable/edittext_selector"
                android:focusable="false"
                android:hint="请输入月份"
                android:inputType="datetime"
                android:paddingBottom="@dimen/margin_padding15"
                android:paddingTop="@dimen/margin_padding15"
                android:text=""
                android:textColorHint="#b4b4b4"
                android:textSize="@dimen/textSize14" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>