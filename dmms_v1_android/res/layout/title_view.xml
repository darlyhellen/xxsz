<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/title_height"
    android:background="@drawable/title_bg" >

    <LinearLayout
        android:id="@+id/title_view_back_llayout"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:background="@drawable/all_title_onclick_selector"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/margin_padding15"
        android:paddingRight="@dimen/margin_padding15"
        android:visibility="invisible" >

        <ImageView
            android:id="@+id/title_view_back_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_padding5"
            android:background="@drawable/back_image" />
    </LinearLayout>

    <TextView
        android:id="@+id/title_view_operation_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/hello_world"
        android:textColor="@android:color/white"
        android:textSize="@dimen/textSize18"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="right"
        android:orientation="horizontal" >

        <ViewFlipper
            android:id="@+id/title_view_right_Flipper01"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:paddingLeft="@dimen/margin_padding10"
            android:paddingRight="@dimen/margin_padding10"
            android:visibility="invisible" >

            <LinearLayout
                android:id="@+id/ll_right"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="visible" >

                <ImageView
                    android:id="@+id/xw_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/xw_title_search"
                    android:visibility="visible" />
            </LinearLayout>

            <TextView
                android:id="@+id/title_view_text"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="right"
                android:gravity="center"
                android:textColor="@color/title_right_select"
                android:textSize="@dimen/textSize16" />
        </ViewFlipper>
    </LinearLayout>

</RelativeLayout>