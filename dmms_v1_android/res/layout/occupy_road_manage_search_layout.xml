<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_project_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/margin_padding5"
            android:text="项目名称:"
            android:textColor="@color/color333333"
            android:textSize="@dimen/textSize16" />

        <EditText
            android:id="@+id/et_project_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_padding5"
            android:background="@drawable/edittext_selector"
            android:hint="请输入项目名称"
            android:inputType="text"
            android:paddingBottom="@dimen/margin_padding15"
            android:paddingTop="@dimen/margin_padding15"
            android:text=""
            android:textColorHint="#b4b4b4"
            android:textSize="@dimen/textSize14" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/margin_padding5"
            android:text="道路名称:"
            android:textColor="@color/color333333"
            android:textSize="@dimen/textSize16" />

        <EditText
            android:id="@+id/et_road_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_padding5"
            android:background="@drawable/edittext_selector"
            android:hint="请输入道路名称"
            android:inputType="text"
            android:paddingBottom="@dimen/margin_padding15"
            android:paddingTop="@dimen/margin_padding15"
            android:text=""
            android:textColorHint="#b4b4b4"
            android:textSize="@dimen/textSize14" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_applicant_title"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="@dimen/margin_padding5"
            android:text="建设单位:"
            android:textColor="@color/color333333"
            android:textSize="@dimen/textSize16" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <LinearLayout
                android:id="@+id/ll_occupy_applicant_click"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_selector"
                android:orientation="horizontal" >

                <View style="@style/full_ver_line_fublish" />

                <TextView
                    android:id="@+id/tv_occupy_applicant"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请选择建设单位"
                    android:textColor="@color/color333333"
                    android:textColorHint="#b4b4b4"
                    android:textSize="@dimen/textSize14" />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="bottom|right"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/icon_pull" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_occupy_builder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="@dimen/margin_padding5"
            android:text="施工单位:"
            android:textColor="@color/color333333"
            android:textSize="@dimen/textSize16" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <LinearLayout
                android:id="@+id/ll_occupy_builder_click"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_selector"
                android:orientation="horizontal" >

                <View style="@style/full_ver_line_fublish" />

                <TextView
                    android:id="@+id/tv_occupy_builder"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请选择施工单位"
                    android:textColor="@color/color333333"
                    android:textColorHint="#b4b4b4"
                    android:textSize="@dimen/textSize14" />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="bottom|right"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/icon_pull" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="@dimen/margin_padding5"
            android:text="施工进度:"
            android:textColor="@color/color333333"
            android:textSize="@dimen/textSize16" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <LinearLayout
                android:id="@+id/ll_occupy_progress_click"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_selector"
                android:orientation="horizontal" >

                <View style="@style/full_ver_line_fublish" />

                <TextView
                    android:id="@+id/tv_occupy_progress"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请选择施工进度"
                    android:textColor="@color/color333333"
                    android:textColorHint="#b4b4b4"
                    android:textSize="@dimen/textSize14" />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="bottom|right"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/icon_pull" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="@dimen/margin_padding5"
            android:text="@string/project_area"
            android:textColor="@color/color333333"
            android:textSize="@dimen/textSize16" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <LinearLayout
                android:id="@+id/ll_occupy_area_click"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_selector"
                android:orientation="horizontal" >

                <View style="@style/full_ver_line_fublish" />

                <TextView
                    android:id="@+id/tv_occupy_area"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请选择辖区"
                    android:textColor="@color/color333333"
                    android:textColorHint="#b4b4b4"
                    android:textSize="@dimen/textSize14" />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="bottom|right"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/icon_pull" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_type_title"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="@dimen/margin_padding5"
            android:text="施工类别:"
            android:textColor="@color/color333333"
            android:textSize="@dimen/textSize16" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <LinearLayout
                android:id="@+id/ll_occupy_type_click"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_selector"
                android:orientation="horizontal" >

                <View style="@style/full_ver_line_fublish" />

                <TextView
                    android:id="@+id/tv_occupy_type"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请选择施工类别"
                    android:textColor="@color/color333333"
                    android:textColorHint="#b4b4b4"
                    android:textSize="@dimen/textSize14" />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="bottom|right"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/icon_pull" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/margin_padding5"
            android:text="起始日期:"
            android:textColor="@color/color333333"
            android:textSize="@dimen/textSize16" />

        <EditText
            android:id="@+id/start_occupy_time"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_padding5"
            android:background="@drawable/edittext_selector"
            android:focusable="false"
            android:hint="输入起始日期"
            android:inputType="datetime"
            android:paddingBottom="@dimen/margin_padding15"
            android:paddingTop="@dimen/margin_padding15"
            android:text=""
            android:textColorHint="#b4b4b4"
            android:textSize="@dimen/textSize14" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/margin_padding5"
            android:text="截止日期:"
            android:textColor="@color/color333333"
            android:textSize="@dimen/textSize16" />

        <EditText
            android:id="@+id/end_occupy_time"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_padding5"
            android:background="@drawable/edittext_selector"
            android:focusable="false"
            android:hint="输入截止日期"
            android:inputType="datetime"
            android:paddingBottom="@dimen/margin_padding15"
            android:paddingTop="@dimen/margin_padding15"
            android:text=""
            android:textColorHint="#b4b4b4"
            android:textSize="@dimen/textSize14" />
    </LinearLayout>

</LinearLayout>