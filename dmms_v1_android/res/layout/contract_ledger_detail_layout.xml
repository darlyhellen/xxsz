<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eaeaea"
    android:orientation="vertical" >

    <com.xiangxun.xacity.view.TitleView
        android:id="@id/comment_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <include
        layout="@layout/loading"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#eaeaea"
        android:orientation="vertical"
        android:visibility="visible" >

        <com.xiangxun.xacity.view.MyScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_padding10"
                android:background="@drawable/business_detai_background"
                android:orientation="vertical"
                android:padding="@dimen/margin_padding5" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_padding10"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="合同名称:"
                        android:textColor="@color/color_888888"
                        android:textSize="@dimen/textSize16" />

                    <TextView
                        android:id="@+id/tv_contract_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/margin_padding8"
                        android:text=""
                        android:textColor="@color/color333333"
                        android:textSize="@dimen/textSize16" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_padding10"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="合同日期:"
                        android:textColor="@color/color_888888"
                        android:textSize="@dimen/textSize16" />

                    <TextView
                        android:id="@+id/tv_contract_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/margin_padding8"
                        android:text=""
                        android:textColor="@color/color333333"
                        android:textSize="@dimen/textSize16" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_padding10"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="采购单位:"
                        android:textColor="@color/color_888888"
                        android:textSize="@dimen/textSize16" />

                    <TextView
                        android:id="@+id/tv_contract_org"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/margin_padding8"
                        android:text=""
                        android:textColor="@color/color333333"
                        android:textSize="@dimen/textSize16" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_padding10"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/contract_man"
                        android:textColor="@color/color_888888"
                        android:textSize="@dimen/textSize16" />

                    <TextView
                        android:id="@+id/tv_contract_man"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/margin_padding8"
                        android:text=""
                        android:textColor="@color/color333333"
                        android:textSize="@dimen/textSize16" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_padding10"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="合同单位:"
                        android:textColor="@color/color_888888"
                        android:textSize="@dimen/textSize16" />

                    <TextView
                        android:id="@+id/tv_purchase_org"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/margin_padding8"
                        android:text=""
                        android:textColor="@color/color333333"
                        android:textSize="@dimen/textSize16" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_padding10"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="对方单位:"
                        android:textColor="@color/color_888888"
                        android:textSize="@dimen/textSize16" />

                    <TextView
                        android:id="@+id/tv_other_org"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/margin_padding8"
                        android:text=""
                        android:textColor="@color/color333333"
                        android:textSize="@dimen/textSize16" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_padding10"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="登记日期:"
                        android:textColor="@color/color_888888"
                        android:textSize="@dimen/textSize16" />

                    <TextView
                        android:id="@+id/tv_date_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/margin_padding8"
                        android:text=""
                        android:textColor="@color/color333333"
                        android:textSize="@dimen/textSize16" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_padding10"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="合同內容:"
                        android:textColor="@color/color_888888"
                        android:textSize="@dimen/textSize16" />

                    <TextView
                        android:id="@+id/tv_contract_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/margin_padding8"
                        android:text=""
                        android:textColor="@color/color333333"
                        android:textSize="@dimen/textSize16" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_padding10"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="合同金额:"
                        android:textColor="@color/color_888888"
                        android:textSize="@dimen/textSize16" />

                    <TextView
                        android:id="@+id/tv_contract_manoy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/margin_padding8"
                        android:text=""
                        android:textColor="@color/color333333"
                        android:textSize="@dimen/textSize16" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_padding10"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="付款条件:"
                        android:textColor="@color/color_888888"
                        android:textSize="@dimen/textSize16" />

                    <TextView
                        android:id="@+id/tv_contract_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/margin_padding8"
                        android:text=""
                        android:textColor="@color/color333333"
                        android:textSize="@dimen/textSize16" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_padding10"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="付款进度:"
                        android:textColor="@color/color_888888"
                        android:textSize="@dimen/textSize16" />

                    <TextView
                        android:id="@+id/tv_contract_progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/margin_padding8"
                        android:text=""
                        android:textColor="@color/color333333"
                        android:textSize="@dimen/textSize16" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_padding10"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="合同文件:"
                        android:textColor="@color/color_888888"
                        android:textSize="@dimen/textSize16" />

                    <com.xiangxun.xacity.volley.toolbox.NetworkImageView
                        android:id="@+id/iv_file"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_marginTop="@dimen/margin_padding5"
                        android:scaleType="fitXY" />
                </LinearLayout>
            </LinearLayout>
        </com.xiangxun.xacity.view.MyScrollView>
    </LinearLayout>

</LinearLayout>