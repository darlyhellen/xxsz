<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#eaeaea"
        android:orientation="vertical"
        android:visibility="visible" >

        <com.xiangxun.xacity.view.MyScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_padding10"
                android:background="@drawable/business_detai_background"
                android:orientation="vertical"
                android:padding="@dimen/margin_padding5" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_padding10"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_title_oprator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="勘察人员:"
                        android:textColor="@color/color_888888"
                        android:textSize="@dimen/textSize16" />

                    <TextView
                        android:id="@+id/tv_content_oprator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/margin_padding8"
                        android:text=""
                        android:textColor="@color/color333333"
                        android:textSize="@dimen/textSize16" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_padding10"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_title_oprator_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="勘察时间:"
                        android:textColor="@color/color_888888"
                        android:textSize="@dimen/textSize16" />

                    <TextView
                        android:id="@+id/tv_content_oprator_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/margin_padding8"
                        android:text=""
                        android:textColor="@color/color333333"
                        android:textSize="@dimen/textSize16" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_padding10"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_title_oprator_dec"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="勘察说明:"
                        android:textColor="@color/color_888888"
                        android:textSize="@dimen/textSize16" />

                    <TextView
                        android:id="@+id/tv_content_oprator_dec"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/margin_padding8"
                        android:text=""
                        android:textColor="@color/color333333"
                        android:textSize="@dimen/textSize16" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_padding10"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_title_oprator_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="操作时间:"
                        android:textColor="@color/color_888888"
                        android:textSize="@dimen/textSize16" />

                    <TextView
                        android:id="@+id/tv_content_oprator_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/margin_padding8"
                        android:text=""
                        android:textColor="@color/color333333"
                        android:textSize="@dimen/textSize16" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_occupy_ramark"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_padding10"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <TextView
                        android:id="@+id/tv_title_ramark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="备注:"
                        android:textColor="@color/color_888888"
                        android:textSize="@dimen/textSize16" />

                    <TextView
                        android:id="@+id/tv_content_ramark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/margin_padding8"
                        android:text=""
                        android:textColor="@color/color333333"
                        android:textSize="@dimen/textSize16" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_image_type"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_padding10"
                    android:orientation="horizontal"
                    android:visibility="gone" >

                    <TextView
                        android:id="@+id/tv_title_image_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="图片类型:"
                        android:textColor="@color/color_888888"
                        android:textSize="@dimen/textSize16" />

                    <TextView
                        android:id="@+id/tv_content_image_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/margin_padding8"
                        android:text=""
                        android:textColor="@color/color333333"
                        android:textSize="@dimen/textSize16" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_padding10"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="图片文件:"
                        android:textColor="@color/color_888888"
                        android:textSize="@dimen/textSize16" />

                    <com.xiangxun.xacity.volley.toolbox.NetworkImageView
                        android:id="@+id/iv_file"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_marginTop="@dimen/margin_padding5"
                        android:scaleType="fitXY" />
                </LinearLayout>
            </LinearLayout>
        </com.xiangxun.xacity.view.MyScrollView>
    </LinearLayout>

</LinearLayout>