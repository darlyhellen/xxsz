<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#87CEFA"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/margin_padding10"
        android:paddingLeft="@dimen/margin_padding5"
        android:paddingRight="@dimen/margin_padding5"
        android:paddingTop="@dimen/margin_padding10" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_padding5"
            android:singleLine="true"
            android:text="路面种类 "
            android:textColor="@color/black"
            android:textSize="@dimen/textSize15" />

        <TextView
            android:id="@+id/tv_occupy_road_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:singleLine="true"
            android:text="道牙"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize15" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/margin_padding5" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_padding5"
            android:singleLine="true"
            android:text="长（m） "
            android:textColor="@color/black"
            android:textSize="@dimen/textSize15" />

        <TextView
            android:id="@+id/tv_occupy_length"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:singleLine="true"
            android:text="2"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize15" />
    </LinearLayout>

    <View style="@style/full_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/margin_padding5" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_padding5"
            android:singleLine="true"
            android:text="宽（m） "
            android:textColor="@color/black"
            android:textSize="@dimen/textSize15" />

        <TextView
            android:id="@+id/tv_occupy_width"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:singleLine="true"
            android:text="2"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize15" />
    </LinearLayout>

    <View style="@style/full_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/margin_padding5" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_padding5"
            android:singleLine="true"
            android:text="面积（㎡） "
            android:textColor="@color/black"
            android:textSize="@dimen/textSize15" />

        <TextView
            android:id="@+id/tv_occupy_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:singleLine="true"
            android:text="2"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize15" />
    </LinearLayout>

    <View style="@style/full_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/margin_padding5" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_padding5"
            android:singleLine="true"
            android:text="长统计（m） "
            android:textColor="@color/black"
            android:textSize="@dimen/textSize15" />

        <TextView
            android:id="@+id/tv_occupy_lengths"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:singleLine="true"
            android:text="4"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize15" />
    </LinearLayout>

    <View style="@style/full_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/margin_padding5" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_padding5"
            android:singleLine="true"
            android:text="面积统计（㎡） "
            android:textColor="@color/black"
            android:textSize="@dimen/textSize15" />

        <TextView
            android:id="@+id/tv_occupy_areas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:singleLine="true"
            android:text="4"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize15" />
    </LinearLayout>

    <View style="@style/full_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/margin_padding5" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_padding5"
            android:singleLine="true"
            android:text="挖/占"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize15" />

        <TextView
            android:id="@+id/tv_occupy_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:singleLine="true"
            android:text="占"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize15" />
    </LinearLayout>

    <View style="@style/full_line" />

</LinearLayout>