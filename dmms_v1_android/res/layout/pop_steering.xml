<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/pop_round"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp" >

	<ImageButton
	    android:id="@+id/button_top" 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:src="@drawable/iconfont_top"
	    android:padding="8dp"
	    android:background="@null"
	    />	
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        >
        <ImageButton 
            android:id="@+id/button_ptz_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/iconfont_left"
            android:layout_gravity="center_vertical"
            android:paddingRight="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:background="@null"
            />
        <TextView 
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:text="方向旋转"
            android:textColor="@color/white"
            android:background="@drawable/text_round"
            android:gravity="center"
            android:textSize="14sp"
            android:padding="5dp"/>
        <ImageButton 
            android:id="@+id/button_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/iconfont_right"
            android:layout_gravity="center_vertical"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:background="@null"
            />
    </LinearLayout>
    <ImageButton 
        android:id="@+id/button_bottom"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:src="@drawable/iconfont_bottom"
	    android:padding="8dp"
	    android:background="@null"
	    />
</LinearLayout>
