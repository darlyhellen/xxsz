<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_call_background"
    android:orientation="vertical"
    android:padding="1dp" >

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/publish_select_dialog_title_background"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_publish_select_dialog_cancle"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/left_click_selector"
            android:gravity="center"
            android:paddingLeft="@dimen/margin_padding15"
            android:paddingRight="@dimen/margin_padding10"
            android:text="@string/dialog_but1"
            android:textColor="@color/blue"
            android:textSize="@dimen/textSize15"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_publish_select_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="选择勤务类型"
            android:textColor="@color/color333333"
            android:textSize="@dimen/textSize17" />
    </FrameLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="#c8c8c8" />

    <ListView
        android:id="@+id/lv_publish_select_dialog"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:cacheColorHint="#00000000"
        android:divider="@color/full_line_tabbottom"
        android:dividerHeight="1px"
        android:fadingEdge="none"
        android:listSelector="@color/transparent_white"
        android:paddingLeft="1.0px"
        android:paddingRight="1.0px"
        android:scrollbars="none" />

</LinearLayout>