<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_colorf5f5f5"
    android:orientation="vertical" >

    <View style="@style/full_line_seperator" />

    <RelativeLayout
        android:id="@+id/item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/margin_padding8" >

        <TextView
            android:id="@+id/tv_ex_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_padding10"
            android:gravity="center"
            android:padding="0dp"
            android:text="已发布已发布"
            android:textColor="@color/color333333"
            android:textSize="@dimen/textSize14" />

        <ImageView
            android:id="@+id/expandable_toggle_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:background="@drawable/ex_checkbox_selecter"
            android:contentDescription="@string/app_name" />
    </RelativeLayout>

    <View style="@style/full_line_seperator" />

    <LinearLayout
        android:id="@+id/expandable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/child_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/margin_padding5" >

            <TextView
                android:id="@+id/tv_child_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_padding15"
                android:gravity="center"
                android:padding="0dp"
                android:text="已发布已发布"
                android:textColor="@color/color333333"
                android:textSize="@dimen/textSize14" />

            <ImageView
                android:id="@+id/toggle_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dip"
                android:background="@drawable/ex_checkbox_selecter"
                android:contentDescription="@string/app_name" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:id="@+id/view_bottom"
        style="@style/full_line_seperator" />

</LinearLayout>