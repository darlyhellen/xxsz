<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/margin_padding5"
            android:text="道路名称:"
            android:textColor="@color/color333333"
            android:textSize="@dimen/textSize16" />

        <EditText
            android:id="@+id/et_road_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_padding5"
            android:background="@drawable/edittext_selector"
            android:hint="请输入道路名称"
            android:inputType="text"
            android:paddingBottom="@dimen/margin_padding15"
            android:paddingTop="@dimen/margin_padding15"
            android:text=""
            android:textColorHint="#b4b4b4"
            android:textSize="@dimen/textSize14" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="@dimen/margin_padding5"
            android:text="辖区:"
            android:textColor="@color/color333333"
            android:textSize="@dimen/textSize16" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <LinearLayout
                android:id="@+id/ll_occupy_area_click"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_selector"
                android:orientation="horizontal" >

                <View style="@style/full_ver_line_fublish" />

                <TextView
                    android:id="@+id/tv_occupy_area"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请选择辖区"
                    android:textColor="@color/color333333"
                    android:textColorHint="#b4b4b4"
                    android:textSize="@dimen/textSize14" />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="bottom|right"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/icon_pull" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="@dimen/margin_padding5"
            android:text="施工日期:"
            android:textColor="@color/color333333"
            android:textSize="@dimen/textSize16" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/start_occupy_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/margin_padding5"
                android:layout_weight="1"
                android:background="@drawable/edittext_selector"
                android:focusable="false"
                android:gravity="center_horizontal"
                android:hint="开始时间"
                android:inputType="datetime"
                android:paddingBottom="@dimen/margin_padding15"
                android:paddingTop="@dimen/margin_padding15"
                android:text=""
                android:textColorHint="#b4b4b4"
                android:textSize="@dimen/textSize14" />

            <View
                android:layout_width="10dp"
                android:layout_height="1dp"
                android:layout_gravity="center_vertical"
                android:background="@color/black" />

            <EditText
                android:id="@+id/end_occupy_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_padding5"
                android:layout_marginRight="@dimen/margin_padding5"
                android:layout_weight="1"
                android:background="@drawable/edittext_selector"
                android:focusable="false"
                android:gravity="center_horizontal"
                android:hint="结束时间"
                android:inputType="datetime"
                android:paddingBottom="@dimen/margin_padding15"
                android:paddingTop="@dimen/margin_padding15"
                android:text=""
                android:textColorHint="#b4b4b4"
                android:textSize="@dimen/textSize14" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>