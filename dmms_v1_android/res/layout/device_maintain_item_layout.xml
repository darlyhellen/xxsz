<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:occupy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_padding5"
    android:background="@drawable/publish_item_all_background"
    android:orientation="vertical"
    android:padding="@dimen/margin_padding5" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#87CEFA"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/margin_padding10"
        android:paddingLeft="@dimen/margin_padding5"
        android:paddingRight="@dimen/margin_padding5"
        android:paddingTop="@dimen/margin_padding10" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_padding5"
            android:singleLine="true"
            android:text="维修项目 "
            android:textColor="@color/black"
            android:textSize="@dimen/textSize15" />

        <TextView
            android:id="@+id/tv_occupy_road_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:singleLine="true"
            android:text="道牙"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize15" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/margin_padding5" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_padding5"
            android:singleLine="true"
            android:text="材料费 "
            android:textColor="@color/black"
            android:textSize="@dimen/textSize15" />

        <TextView
            android:id="@+id/tv_occupy_length"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:singleLine="true"
            android:text="2"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize15" />
    </LinearLayout>

    <View style="@style/full_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/margin_padding5" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_padding5"
            android:singleLine="true"
            android:text="工时费 "
            android:textColor="@color/black"
            android:textSize="@dimen/textSize15" />

        <TextView
            android:id="@+id/tv_occupy_width"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:singleLine="true"
            android:text="2"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize15" />
    </LinearLayout>

    <View style="@style/full_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/margin_padding5" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_padding5"
            android:singleLine="true"
            android:text="费用合计 "
            android:textColor="@color/black"
            android:textSize="@dimen/textSize15" />

        <TextView
            android:id="@+id/tv_occupy_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:singleLine="true"
            android:text="2"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize15" />
    </LinearLayout>

    <View style="@style/full_line" />

</LinearLayout>