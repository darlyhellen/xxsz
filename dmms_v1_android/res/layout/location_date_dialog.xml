<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_call_background"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="58dp"
        android:orientation="vertical"
        android:padding="@dimen/margin_padding15" >

        <TextView
            android:id="@+id/diag_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择轨迹查询时间"
            android:textColor="@color/color333333"
            android:textSize="@dimen/textSize20"
            android:textStyle="bold" />

        <View
            style="@style/full_line"
            android:layout_marginTop="@dimen/margin_padding8" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_padding8"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="@dimen/margin_padding5"
                android:text="开始时间:"
                android:textColor="@color/color333333"
                android:textSize="@dimen/textSize16" />

            <EditText
                android:id="@+id/start_location_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_padding5"
                android:layout_weight="1"
                android:background="@drawable/edittext_selector"
                android:focusable="false"
                android:gravity="center_horizontal"
                android:hint="开始时间"
                android:inputType="datetime"
                android:paddingBottom="@dimen/margin_padding15"
                android:paddingTop="@dimen/margin_padding15"
                android:text=""
                android:textColorHint="#b4b4b4"
                android:textSize="@dimen/textSize16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="@dimen/margin_padding5"
                android:text="结束时间:"
                android:textColor="@color/color333333"
                android:textSize="@dimen/textSize16" />

            <EditText
                android:id="@+id/end_location_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_padding5"
                android:layout_weight="1"
                android:background="@drawable/edittext_selector"
                android:focusable="false"
                android:gravity="center_horizontal"
                android:hint="结束时间"
                android:inputType="datetime"
                android:paddingBottom="@dimen/margin_padding15"
                android:paddingTop="@dimen/margin_padding15"
                android:text=""
                android:textColorHint="#b4b4b4"
                android:textSize="@dimen/textSize16" />
        </LinearLayout>
    </LinearLayout>

    <View style="@style/full_line_seperator" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="42dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/dia_tv_but1"
            android:layout_width="0.0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/hit_selector_left"
            android:gravity="center"
            android:text="@string/dialog_but1"
            android:textColor="@color/color333333"
            android:textSize="@dimen/textSize15" />

        <View style="@style/full_ver_line_seperator" />

        <TextView
            android:id="@+id/dia_tv_but2"
            android:layout_width="0.0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/hit_selector_right"
            android:gravity="center"
            android:text="@string/dialog_but2"
            android:textColor="@color/color333333"
            android:textSize="@dimen/textSize15" >
        </TextView>
    </LinearLayout>

</LinearLayout>